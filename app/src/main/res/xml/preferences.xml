<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:key="@string/key_pref_enabled"
        android:title="@string/enabled"
        android:summary="@string/enabled_summ"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:id="@+id/pref_autostart"
        android:key="@string/key_pref_autostart"
        android:dependency="@string/key_pref_enabled"
        android:title="@string/autostart"
        android:summary="@string/autostart_summ"
        android:defaultValue="false" />
    <CheckBoxPreference
        android:key="@string/key_pref_launcher_lock"
        android:title="@string/show_launcher_lock"
        android:summary="@string/show_launcher_lock_summ"
        android:defaultValue="true" />
    <CheckBoxPreference
        android:key="@string/key_pref_hide_on_fullscreen"
        android:title="@string/hide_on_fullscreen"
        android:summary="@string/hide_on_fullscreen_summ"
        android:defaultValue="true" />
    <EditTextPreference
        android:id="@+id/pref_long_action"
        android:key="@string/key_pref_long_action"
        android:title="@string/long_action"
        android:summary="@string/long_action_summ"
        android:defaultValue="" />
</PreferenceScreen>